import java.awt.*;
import java.applet.*;
import java.util.*;

public class Train
{
 
  ArrayList<RailCar> railCars = new ArrayList<RailCar>();
  int lastX;
  int yPos = 150;
  
  
  public Train(int xStart, int yStart)
   {
      lastX = xStart;
      yPos = yStart;     
   }

  public void addCar(String s, Color c)
  {
   
    RailCar rail;
    if(s.equals("Locomotive"))
    {
      rail = new Locomotive(c,lastX, yPos);
      railCars.add(rail);
    }
    else if(s.equals("PassengerCar"))
    {
      rail = new PassengerCar(c,lastX,yPos);
      railCars.add(rail);
    }
    else if(s.equals("FreightCar"))
    {
      rail = new FreightCar(c,lastX,yPos);
      railCars.add(rail);
    }
    else if(s.equals("Caboose"))
    {
      rail = new Caboose(c,lastX,yPos);
      railCars.add(rail);
    }
    
    lastX += 150 + 25;//Car length plus link length
   }
  
   
   public void showCars(Graphics g){
    
       for(RailCar r: railCars)
       {
           r.drawCar(g);
           
        }
    }
   
   
}

